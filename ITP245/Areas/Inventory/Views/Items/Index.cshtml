@model IEnumerable<InventoryModel.Inventory.Item>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Inventory.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-lg-4">
            <h3>Items</h3>
            @Html.ActionLink(HttpUtility.HtmlDecode("&laquo; Items &raquo;"),
                "Index", "Items", null,
                new { area = "Inventory", @class = "btn btn-primary" })
            @Html.ActionLink(HttpUtility.HtmlDecode("&laquo; Categories &raquo;"),
                "Index", "Categories", null,
                new { area = "Inventory", @class = "btn btn-primary" })
            @Html.ActionLink(HttpUtility.HtmlDecode("&laquo; Spoilage &raquo;"),
                "Index", "Spoilages", null,
                new { area = "Inventory", @class = "btn btn-primary" })
        </div>
    </div>
</div>


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuantityOnHand)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RetailPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StandardCost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuantityOnHand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RetailPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StandardCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ItemId }) |
                @Html.ActionLink("Details", "Details", new { id = item.ItemId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ItemId })
            </td>
        </tr>
    }

</table>
