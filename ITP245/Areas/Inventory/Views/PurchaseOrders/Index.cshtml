@model IEnumerable<InventoryModel.Inventory.PurchaseOrder>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Inventory.cshtml";
}

<h2>Purchase Orders</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PurchaseOrderNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PoDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vendor.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PurchaseOrderNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PoDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @*Html.DisplayFor(modelItem => item.Vendor.Name)*@
                @Html.ActionLink(item.Vendor.Name, "Details", "Vendors", new { area = "Inventory", id=item.VendorId}, null)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PurchaseOrderNumber }, new { @class = "badge badge-success" }) 
                @Html.ActionLink("Details", "Details", new { id = item.PurchaseOrderNumber }, new { @class = "badge badge-warning" }) 
                @Html.ActionLink("Delete", "Delete", new { id = item.PurchaseOrderNumber }, new { @class = "badge badge-danger" })
            </td>
        </tr>
    }

</table>
