<!DOCTYPE html>
<html>
<head>
    <style>
        #inventoryTitle {
            font-style:italic;
        }
        #homeLink{
            font-size:large;
        }
    </style>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventory Insight Inc.</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#"></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse">
            <ul id="homeLink" class="nav navbar-nav">
                @Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)
            </ul>
        </div>
    </nav>
    <h2 id="inventoryTitle" align="center">Inventory Area</h2>

    <div align="center">
        @Html.ActionLink(HttpUtility.HtmlDecode("&laquo; Items &raquo;"),
                "Index", "Items", null,
                new { area = "Inventory", @class = "btn btn-primary" })
        @Html.ActionLink(HttpUtility.HtmlDecode("&laquo; Purchase Orders &raquo;"),
                "Index", "PurchaseOrders", null,
                new { area = "Inventory", @class = "btn btn-success" })
        @Html.ActionLink(HttpUtility.HtmlDecode("&laquo; Vendors &raquo;"),
                "Index", "Vendors", null,
                new { area = "Inventory", @class = "btn btn-info" })
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Ciaran Patrick Maguire - Reynolds Community College</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
