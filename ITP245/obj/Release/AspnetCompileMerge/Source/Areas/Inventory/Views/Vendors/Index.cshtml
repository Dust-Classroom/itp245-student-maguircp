@model IEnumerable<InventoryModel.Inventory.Vendor>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Inventory.cshtml";
}


<h2>Vendors</h2>

<p>
    @Html.ActionLink("Create New", "Create")
    &nbsp;&nbsp;&nbsp;
    <label class="filter">Filter by: </label>
    &nbsp;&nbsp;&nbsp;
    <label class="filter">State</label>
    &nbsp;&nbsp;
    @Html.DropDownList("State", null,
        htmlAttributes: new { @class = "filter", @onchange = "FilterByTag()" })
</p>
<div id="myVendorContainer">
    @Html.Partial("_Index", Model)
</div>

@section Scripts {
    <script type="text/javascript">
        function FilterByTag() {
            var state = $('#State').val();
            var container = $('#myVendorContainer');
            container.load('@Url.Action("_IndexByFilter")?id=' + state);
        }

    </script>
    }
