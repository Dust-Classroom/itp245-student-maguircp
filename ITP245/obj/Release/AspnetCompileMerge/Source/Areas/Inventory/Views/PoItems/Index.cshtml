@model IEnumerable<InventoryModel.Inventory.PoItem>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Inventory.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Item.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PurchaseOrder.PurchaseOrderNumber)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PurchaseOrder.PurchaseOrderNumber)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PoItemId }, new { @class = "badge badge-success" }) 
            @Html.ActionLink("Details", "Details", new { id=item.PoItemId }, new { @class = "badge badge-warning" }) 
            @Html.ActionLink("Delete", "Delete", new { id=item.PoItemId }, new { @class = "badge badge-danger" })
        </td>
    </tr>
}

</table>
