@model InventoryModel.Inventory.Category

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Inventory.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.CategoryId }) |
    @Html.ActionLink("Back to List", "Index")
</p>

<div class="container">
    <div class="row">
        <div class="col-lg-12 heading">
            <strong>@Model.Name Items</strong>
        </div>
    </div>
        @foreach (var item in Model.Items)
        {
            <div class="row">
                @Html.ActionLink(item.Name, "Details", "Items", new { area = "Inventory", id = item.ItemId }, null)

            </div>
        }
    </div>
