    @model IEnumerable<InventoryModel.Inventory.Spoilage>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Inventory.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-4">
            <h3>Spoilage</h3>
            @Html.ActionLink(HttpUtility.HtmlDecode("&laquo; Items &raquo;"),
                "Index", "Items", null,
                new { area = "Inventory", @class = "btn btn-primary" })
            @Html.ActionLink(HttpUtility.HtmlDecode("&laquo; Categories &raquo;"),
                "Index", "Categories", null,
                new { area = "Inventory", @class = "btn btn-primary" })
            @Html.ActionLink(HttpUtility.HtmlDecode("&laquo; Spoilage &raquo;"),
                "Index", "Spoilages", null,
                new { area = "Inventory", @class = "btn btn-primary" })
        </div>
    </div>
</div>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReasonType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SpoilageDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Value)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Item.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReasonType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpoilageDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                @*Html.DisplayFor(modelItem => item.Item.Name)*@
                @Html.ActionLink(item.Item.Name, "Details", "Items", new { area = "Inventory", id=item.ItemId}, null)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.SpoilageId }, new { @class = "badge badge-success" }) 
                @Html.ActionLink("Details", "Details", new { id = item.SpoilageId }, new { @class = "badge badge-warning" }) 
                @Html.ActionLink("Delete", "Delete", new { id = item.SpoilageId }, new { @class = "badge badge-danger" })
            </td>
        </tr>
    }

</table>
